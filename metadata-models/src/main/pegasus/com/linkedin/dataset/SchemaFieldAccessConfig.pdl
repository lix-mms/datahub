namespace com.linkedin.dataset

import com.linkedin.schema.SchemaFieldDataType

record SchemaFieldAccessConfig {

  /**
   * Name or path of the field in dataset
   */
  fieldPath: SchemaFieldPath

  /**
   * Type of field
   */
  type: optional SchemaFieldDataType

  /**
   * Specifies whether the field is visible to general access requests
   */
  visible: boolean = true

  /**
   * Specifies if NDA has to be signed for accessing the field
   */
  ndaRequired: boolean = false
}
